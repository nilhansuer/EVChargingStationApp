<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_charging"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
        android:id="@+id/help_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/help"/>


    <TextView
        android:id="@+id/aboutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutTextView"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:text="- Press 'Nearby Stations' button to display the recommended stations!\n\n- Press 'Charging History' button to display your charging history!\n\n- Press 'Favorite Stations' to display the stations that you marked as favorite! "
        android:textColor="#101E6C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FE4F6F"
        android:text="@string/ok"
        android:textColor="#474F70" />

</LinearLayout>